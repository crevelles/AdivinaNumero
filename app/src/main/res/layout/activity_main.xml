<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"


    android:layout_height="match_parent"
    android:background="@color/Adivina"
    tools:context="com.example.satan.adivinanumero.MainActivity">

    <TextView
        android:id="@+id/textPista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/comparaNumero"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="107dp"
        android:text="Debes adivinar el nÃºmero secreto entre 1 y 100. \n Tienes 5 intentos"
        android:textAlignment="center"

        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/comparaNumero"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="49dp"
        android:elevation="10dp"
        android:onClick="comprobar"
        android:text="PRUEBA ESTE NUMERO"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="430dp" />

    <TextView
        android:id="@+id/textIntentos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/comparaNumero"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/comparaNumero"
        android:layout_marginTop="41dp"
        android:text="Tienes 5 intentos"
        android:textSize="22sp"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="28dp" />

    <EditText
        android:id="@+id/textNumero"
        android:layout_width="154dp"
        android:layout_height="49dp"
        android:layout_above="@+id/comparaNumero"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="number"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="370dp" />

    <TextView
        android:id="@+id/numSecreto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textIntentos"
        android:layout_marginTop="52dp"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnNuevaPartida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:onClick="jugarNuevaPartida"
        android:text="JUGAR NUEVA PARTIDA"
        android:textSize="18sp"
        android:visibility="visible" />

</RelativeLayout>
